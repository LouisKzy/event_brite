<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="custom-card bg-dark text-white">
        <div class="card-body">
          <h2 class="text-center">Création d'un nouvel événement</h2>
          <%= form_for @event do |f| %>
            <div class="form-group">
              <%= f.label :start_date %>
              <%= f.datetime_field :start_date, class: "form-control bg-white text-black" %>
            </div>
            <div class="form-group">
              <%= f.label :duration %>
              <%= f.number_field :duration, class: "form-control bg-white text-black" %>
            </div>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control bg-white text-black" %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control bg-white text-black" %>
            </div>
            <div class="form-group">
              <%= f.label :price %>
              <%= f.number_field :price, class: "form-control bg-white text-black" %>
            </div>
            <div class="form-group">
              <%= f.label :location %>
              <%= f.text_field :location, class: "form-control bg-white text-black mb-3" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "Créer l'événement", class: "btn btn-primary" %>
            </div>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>