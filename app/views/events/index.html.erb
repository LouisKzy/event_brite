<div class="jumbotron">
  <div class="container mb-4">
    <h1 class="display-3 text-center">Tous les événements à venir !</h1>
    <%= link_to "Créer un nouvel événement", new_event_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4">
        <div class="card mb-4 custom-card"> <!-- Utilisez votre classe personnalisée -->
          <div class="card-body">
            <h5 class="card-title custom-card-title"><%= event.title %></h5>
            <p class="card-text custom-card-text"><%= event.description %></p>
            <a href="<%= event_path(event) %>" class="btn btn-primary">Voir plus</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>