<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="custom-card bg-dark text-white">
        <div class="card-body">
          <h2 class="card-title text-center">Ton plus beau profil</h2>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Prenom:</strong> <%= @user.first_name %></p>
          <p><strong>Nom:</strong> <%= @user.last_name %></p>
          <p><strong>Description:</strong> <%= @user.description %></p>
          <h2 class="card-title text-center">Les évenements que tu as crées</h2>
          <ul>
            <% @user.administered_events.each do |event| %>
              <li class="text-center"><%= button_to event.title, event_path(event), class: 'btn btn-secondary mt-2' %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% if current_user == @user %>
        <%= link_to 'Éditer le profil', edit_user_registration_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>