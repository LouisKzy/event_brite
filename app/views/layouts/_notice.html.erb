<% if notice != nil %>
  <div class="toast show position-absolute bottom-0 end-0 mb-3 me-3 bg-dark" role="alert" aria-live="assertive" aria-atomic="true" >
    <div class="toast-header">
      <strong class="me-auto"></strong>
      <small class="text-body-secondary">Pop up</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body text-white">
      <%= notice %>
    </div>
<% end %>
</div>